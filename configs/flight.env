# Satellite Flight Configuration
# Copy this to .env and modify as needed

# Directory Paths
INGEST_DIR=test_ingest
WORK_DIR=test_work/ready
METADATA_DIR=test_work/metadata
DETECTIONS_DIR=test_detections
THUMBS_DIR=test_thumbs
OUTBOX_DIR=test_outbox
LOGS_DIR=test_logs

# Ingest Settings
MAX_FILE_SIZE_MB=100
SUPPORTED_FORMATS=jpg,jpeg,png,tif,tiff,geotiff
HEALTH_CHECK_INTERVAL=30

# Preprocessing
PREPROC_MODE=fabf
FABF_RHO=5.0
FABF_N=5
FABF_SIGMA=0.1
CFAR_THRESHOLD=0.1

# Inference
MODEL_WEIGHTS=runs/train/experiment3/weights/best.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45
MAX_DETECTIONS=1000
BATCH_SIZE=1
DEVICE=auto

# Post-processing
MIN_DETECTION_SIZE=32
NMS_IOU_THRESHOLD=0.45
THUMBNAIL_SIZE=256
SAVE_CROPS=true

# Packager
PACKET_SIZE_MB=10
MAX_RETRIES=3
COMPRESSION_LEVEL=6

# Health & Monitoring
HEALTH_PORT=8080
LOG_LEVEL=INFO
RING_BUFFER_SIZE_GB=8
WATCHDOG_TIMEOUT_SEC=300 